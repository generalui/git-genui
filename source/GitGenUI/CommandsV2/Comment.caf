import &StandardImport, &InquirerPlus

description: "" comment on a story
run: (options) ->

  &Tracker.tracker.stories
  .then (stories) ->
    Inquirer SelectStoryQ
      stories
      message:  "" What story do you want to comment on?
  .then ({story}) ->
    if story
      Inquirer InputQ
        name: :comment
        message: "" Comment:
      .then ({comment}) ->
        &Tracker.tracker.createComment
          story.id
          comment
    else log "Canceled"
