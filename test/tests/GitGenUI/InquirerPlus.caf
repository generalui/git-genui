import &StandardImport
suite: ->
  testAnswers =
    name: :Shane
    age:  99

  test :prime ->
    InquirerPlus.prime foo: 123
    .then (answers) ->
      assert.eq answers, foo: 123

  test :askNothing ->
    InquirerPlus.ask()
    .then (answers) -> assert.eq answers, {}

  test :thenAsk-then ->
    InquirerPlus.prime testAnswers
    .thenAsk()
    .then (answers) -> assert.eq answers, testAnswers
    .thenAsk()

  test :thenAsk-tap ->
    InquirerPlus.prime testAnswers
    .thenAsk()
    .tap (answers) -> foo: :bar
    .thenAsk()
    .then (answers) -> assert.eq answers, testAnswers

  test :thenAsk-catch ->
    InquirerPlus.prime testAnswers
    .thenAsk()
    .catch ->
    .thenAsk()
    .then (answers) -> assert.eq answers, testAnswers
